pwd
cd /                    -go to root directory
cd ~                    -go to home directory
cd ../                  -go one path behind
ls -l
ls -i                   -get inode of files
alias path="cd /Desktop/sujata" -creating alias of command
type path               -check whether the command path already exist
ln original hardlink    -creating hardlink of a file
ln -s original softlink -creating soft link
chmod -R 777 .          -change directory permission
grep -irHn "hello" .    -search hello in present directory
find . -name "abc.txt"  -search for file in present directory
mkdir                   -creating a directory
rm -rf build/           -removing a directory
cp -vrf src.txt destination -copy src.txt to destination path
mv abc hello             -rename the file abc to hello
